function sum(a, b){
    console.log(a)
    console.log(b)


}
sum(5 - 5)

function math (a, b) {
    console.log(a)
    console.log(b)

}
math(40 + 10)



// invoking a function. calling a function.
// parameters and arguments
//below declaration declares two parameters
function add(firstParameter, secondParameter){
    console.log(firstParameter + secondParameter);


    add (1,  3);
    add (1,  3);
}


